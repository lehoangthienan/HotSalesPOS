<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
            android:layout_width="72dp"
            android:layout_height="96dp"
            android:background="@color/colorBackgroundOfSwipeLayout"
            android:orientation="horizontal"
            android:weightSum="1">

        <android.support.constraint.ConstraintLayout
                android:id="@+id/rlArrivedEditLocation"
                android:layout_width="72dp"
                android:layout_height="96dp"
                android:background="@drawable/button_edit_product"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground">

            <ImageView
                    android:id="@+id/tvIcReturnLocation"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerHorizontal="true"
                    android:fontFamily="@font/material"
                    android:src="@drawable/ic_call"
                    tools:ignore="MissingConstraints" android:layout_marginEnd="8dp"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/tvTitleReturnLocation"/>

            <TextView
                    android:id="@+id/tvTitleReturnLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="28dp"
                    android:fontFamily="@font/lato_regular"
                    android:text="CALL"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"/>

        </android.support.constraint.ConstraintLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>