    <TextView
            android:id="@+id/tvNameLocationSearchMap"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="96dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
