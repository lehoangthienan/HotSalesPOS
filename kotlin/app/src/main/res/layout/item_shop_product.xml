<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="105dp">

    <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="96dp"
            android:layout_marginBottom="8dp"
    >

        <com.daimajia.swipe.SwipeLayout
                android:id="@+id/slItem"
                android:layout_width="match_parent"
                android:layout_height="96dp">

            <LinearLayout
                    android:layout_width="146dp"
                    android:layout_height="96dp"
                    android:background="@color/colorBackgroundOfSwipeLayout"
                    android:orientation="horizontal"
                    android:weightSum="1">

                <android.support.constraint.ConstraintLayout
                        android:id="@+id/viewCall"
                        android:layout_width="72dp"
                        android:layout_height="96dp"
                        android:background="@drawable/button_edit_product"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?android:attr/selectableItemBackground">

                    <ImageView
                            android:id="@+id/tvIcReturnLocation"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_centerHorizontal="true"
                            android:fontFamily="@font/material"
                            android:src="@drawable/ic_call"
                            tools:ignore="MissingConstraints" android:layout_marginEnd="8dp"
                            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
                            app:layout_constraintStart_toStartOf="parent"
                            android:layout_marginBottom="8dp"
                            app:layout_constraintBottom_toTopOf="@+id/tvTitleReturnLocation"/>

                    <TextView
                            android:id="@+id/tvTitleReturnLocation"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:layout_marginEnd="8dp"
                            android:layout_marginBottom="28dp"
                            android:fontFamily="@font/lato_regular"
                            android:text="CALL"
                            android:textColor="@color/white"
                            android:textSize="12sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"/>

                </android.support.constraint.ConstraintLayout>

                <android.support.constraint.ConstraintLayout
                        android:id="@+id/viewSms"
                        android:layout_width="73dp"
                        android:layout_height="96dp"
                        android:background="@drawable/button_delete_product"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?android:attr/selectableItemBackground">

                    <ImageView
                            android:id="@+id/tvIcReturn"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_centerHorizontal="true"
                            android:fontFamily="@font/material"
                            android:src="@drawable/ic_email"
                            tools:ignore="MissingConstraints" android:layout_marginEnd="8dp"
                            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
                            app:layout_constraintStart_toStartOf="parent"
                            android:layout_marginBottom="8dp"
                            app:layout_constraintBottom_toTopOf="@+id/textView30"/>

                    <TextView
                            android:id="@+id/textView30"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_marginEnd="8dp"
                            android:layout_marginBottom="28dp"
                            android:fontFamily="@font/lato_regular"
                            android:text="SMS"
                            android:textColor="@color/colorText"
                            android:textSize="12sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"/>

                </android.support.constraint.ConstraintLayout>

            </LinearLayout>


            <android.support.constraint.ConstraintLayout
                    android:id="@+id/viewItemProduct"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_width="match_parent"
                    android:layout_height="96dp">

                <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp" app:srcCompat="@drawable/ic_sales2"
                        android:id="@+id/ivProduct" android:layout_marginTop="8dp"
                        app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="8dp" android:layout_marginBottom="8dp"
                        app:layout_constraintBottom_toBottomOf="parent"/>

                <ImageView
                        android:layout_width="36dp"
                        android:layout_height="34dp" app:srcCompat="@drawable/ic_sales2"
                        android:id="@+id/ivIcHotSale"
                        android:layout_marginBottom="8dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"/>
                <TextView
                        android:id="@+id/tvName"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:text="AAA"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:textSize="14sp"
                        android:textColor="@color/colorText"
                        android:fontFamily="@font/lato_regular"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="8dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="95dp"/>

                <TextView
                        android:id="@+id/tvPrice"
                        android:layout_width="150dp"
                        android:layout_height="20dp"
                        android:text="AAA"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:textSize="16sp"
                        android:textColor="@color/colorAccent"
                        android:fontFamily="@font/lato_regular"
                        android:layout_marginTop="32dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="95dp"/>

                <TextView
                        android:id="@+id/tvPriceDiscount"
                        android:layout_width="75dp"
                        android:layout_height="20dp"
                        android:text="Ä‘ 4,000,000"
                        android:background="@drawable/dashed"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:textSize="12sp"
                        android:textColor="@color/gray"
                        android:fontFamily="@font/lato_regular"
                        android:layout_marginTop="55dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="95dp"/>

                <TextView
                        android:id="@+id/tvPercentDiscount"
                        android:layout_width="28dp"
                        android:layout_height="20dp"
                        android:text="70%"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:textSize="12sp"
                        android:textColor="@color/colorText"
                        android:fontFamily="@font/lato_regular"
                        android:layout_marginTop="55dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="175dp"/>

                <TextView
                        android:id="@+id/tvBranchName"
                        android:layout_width="150dp"
                        android:layout_height="20dp"
                        android:text="TiKi"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:textSize="12sp"
                        android:textColor="@color/colorText"
                        android:fontFamily="@font/lato_regular"
                        android:layout_marginTop="75dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="95dp"/>


            </android.support.constraint.ConstraintLayout>

        </com.daimajia.swipe.SwipeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>