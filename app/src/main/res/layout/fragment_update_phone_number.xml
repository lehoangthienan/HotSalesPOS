<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             android:background="#FFFFFFFF">

    <EditText
            android:id="@+id/edtCheckNumber6"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="52dp"
            android:layout_marginTop="24dp"
            android:backgroundTint="@color/colorAccent"
            android:cursorVisible="false"
            android:ems="10"
            android:gravity="center_horizontal"
            android:inputType="number"
            android:maxLength="1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/edtCheckNumber5"
            app:layout_constraintTop_toBottomOf="@+id/tvContentSupportConfirmPhone"
            tools:ignore="Autofill,LabelFor"/>

    <EditText
            android:id="@+id/edtCheckNumber5"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:backgroundTint="@color/colorAccent"
            android:cursorVisible="false"
            android:ems="10"
            android:gravity="center_horizontal"
            android:inputType="number"
            android:maxLength="1"
            app:layout_constraintEnd_toStartOf="@+id/edtCheckNumber6"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/edtCheckNumber4"
            app:layout_constraintTop_toBottomOf="@+id/tvContentSupportConfirmPhone"
            tools:ignore="Autofill,LabelFor"/>

    <EditText
            android:id="@+id/edtCheckNumber4"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:backgroundTint="@color/colorAccent"
            android:cursorVisible="false"
            android:ems="10"
            android:gravity="center_horizontal"
            android:inputType="number"
            android:maxLength="1"
            app:layout_constraintEnd_toStartOf="@+id/edtCheckNumber5"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/edtCheckNumber3"
            app:layout_constraintTop_toBottomOf="@+id/tvContentSupportConfirmPhone"
            tools:ignore="Autofill,LabelFor"/>

    <EditText
            android:id="@+id/edtCheckNumber3"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:backgroundTint="@color/colorAccent"
            android:cursorVisible="false"
            android:ems="10"
            android:gravity="center_horizontal"
            android:inputType="number"
            android:maxLength="1"
            app:layout_constraintEnd_toStartOf="@+id/edtCheckNumber4"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/edtCheckNumber2"
            app:layout_constraintTop_toBottomOf="@+id/tvContentSupportConfirmPhone"
            tools:ignore="Autofill,LabelFor"/>

    <EditText
            android:id="@+id/edtCheckNumber2"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:backgroundTint="@color/colorAccent"
            android:cursorVisible="false"
            android:ems="10"
            android:gravity="center_horizontal"
            android:inputType="number"
            android:maxLength="1"
            app:layout_constraintEnd_toStartOf="@+id/edtCheckNumber3"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/edtCheckNumber1"
            app:layout_constraintTop_toBottomOf="@+id/tvContentSupportConfirmPhone"
            tools:ignore="Autofill,LabelFor"/>

    <EditText
            android:id="@+id/edtCheckNumber1"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="52dp"
            android:layout_marginTop="24dp"
            android:backgroundTint="@color/colorAccent"
            android:cursorVisible="false"
            android:ems="10"
            android:focusable="true"
            android:gravity="center_horizontal"
            android:inputType="number"
            android:maxLength="1"
            app:layout_constraintEnd_toStartOf="@+id/edtCheckNumber2"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvContentSupportConfirmPhone"
            tools:ignore="Autofill,LabelFor"/>


    <ImageView xmlns:app="http://schemas.android.com/apk/res-auto"
               android:id="@+id/profile_image"
               android:layout_width="75dp"
               android:layout_height="89.2dp"
               android:layout_marginEnd="8dp"
               android:layout_marginStart="8dp"
               android:layout_marginTop="44dp"
               android:src="@drawable/ic_sales"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintHorizontal_bias="0.501"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toBottomOf="@+id/cvTopBarUpdateUserProfile"
               tools:ignore="ContentDescription"/>

    <android.support.v7.widget.CardView
            android:id="@+id/cvTopBarUpdateUserProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent">

        <android.support.constraint.ConstraintLayout
                android:id="@+id/relativeLayoutUpdateUser"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/colorAccent"
                android:shadowColor="@color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

            <TextView
                    android:id="@+id/textView26"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="12dp"
                    android:fontFamily="@font/lato_semibold"
                    android:text="@string/authentication"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.502"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                    android:id="@+id/tvCheckFinish"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="12dp"
                    android:layout_marginEnd="16dp"
                    android:background="?selectableItemBackgroundBorderless"
                    android:fontFamily="@font/material"
                    android:gravity="center"
                    android:text=""
                    android:clickable="true"
                    android:textColor="@color/white"
                    android:textSize="24sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                    android:id="@+id/tvBack"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="16dp"
                    android:background="?selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:focusable="true"
                    android:fontFamily="@font/material"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/white"
                    android:textSize="24sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.006"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>


        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>

    <TextView
            android:id="@+id/tvContentSupportConfirmPhone"
            android:layout_width="275dp"
            android:layout_height="48dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="32dp"
            android:width="205dp"
            android:height="55dp"
            android:fontFamily="@font/lato_regular"
            android:gravity="center"
            android:lineSpacingMultiplier="1.29"
            android:text="@string/content_content_support_confirm_phone"
            android:textColor="@color/colorText"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/profile_image"/>


    <TextView
            android:id="@+id/textView6"
            android:layout_width="143dp"
            android:layout_height="26dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="56dp"
            android:layout_marginTop="88dp"
            android:width="205dp"
            android:height="55dp"
            android:fontFamily="@font/lato_regular"
            android:lineSpacingMultiplier="1.29"
            android:text="@string/title_not_receive_code"
            android:textColor="@color/colorTextUnderTopBar"
            android:textSize="14sp"
            app:layout_constraintEnd_toStartOf="@+id/tvResendConfirmPhone"
            app:layout_constraintHorizontal_bias="0.022"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvContentSupportConfirmPhone"/>

    <TextView
            android:id="@+id/tvResendConfirmPhone"
            android:layout_width="80dp"
            android:layout_height="24dp"
            android:layout_marginEnd="56dp"
            android:layout_marginTop="88dp"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:fontFamily="@font/lato_regular"
            android:text="@string/action_resend_confirm_phone"
            android:textAllCaps="false"
            android:textColor="@color/colorAccent"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvContentSupportConfirmPhone"
            android:focusable="true"/>


</android.support.constraint.ConstraintLayout>